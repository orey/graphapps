@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

@prefix ga:   <https://github.com/orey/graphapps/graphapps-grammar#> .


<https://github.com/orey/graphapps/graphapps-grammar#> a owl:Ontology ;
        dc:title "" ;
        dc:description "Basic primitives" .

ga:Identifier a rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	rdfs:isDefinedBy <https://github.com/orey/graphapps/graphapps-grammar#> ;
	rdfs:label "Identifier" ;
	rdfs:comment "The identifier in semantic grammars" .

ga:Separator a rdfs:Datatype ;
	rdfs:subClassOf rdfs:Literal ;
	rdfs:isDefinedBy <https://github.com/orey/graphapps/graphapps-grammar#> ;
	rdfs:label "Separator" ;
	rdfs:comment "The separator in semantic grammars" .

ga:Node a rdfs:Class ;
	rdfs:isDefinedBy <https://github.com/orey/graphapps/graphapps-grammar#> ;
	rdfs:label "Node" ;
	rdfs:subClassOf rdfs:Resource ;
	rdfs:comment "The class of ID-ed Nodes."

ga:Edge a rdfs:Class ;
	rdfs:isDefinedBy <https://github.com/orey/graphapps/graphapps-grammar#> ;
	rdfs:label "Edge" ;
	rdfs:subClassOf rdfs:Resource ;
	rdfs:comment "The class of ID-ed Edges."

ga:source a rdf:Property ;
	rdfs:isDefinedBy <https://github.com/orey/graphapps/graphapps-grammar#> ;
	rdfs:label "source" ;
        rdf:domain ga:Edge ;
        rdf:range  ga:Node .

ga:target a rdf:Property ;
	rdfs:isDefinedBy <https://github.com/orey/graphapps/graphapps-grammar#> ;
	rdfs:label "target" ;
        rdf:domain ga:Edge ;
        rdf:range  ga:Node .

